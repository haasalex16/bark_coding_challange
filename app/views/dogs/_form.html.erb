<%= simple_form_for @dog do |f| %>
<%= f.input :name %>
<%= f.input :description, as: :text %>
<p>Select multiple files or drag in a group of images to upload multiple at a time</p>
<%= f.input :image, as: :file , input_html: { multiple: true } %>
<% if @dog.images.any? %>
<%= image_tag @dog.images.first %>
<% end %>

<%= f.button :submit %>
<% end %>